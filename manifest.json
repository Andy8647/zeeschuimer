{

  "description": "Collect data while browsing TikTok and upload it for analysis later",
  "manifest_version": 2,
  "name": "Zeeschuimer",
  "version": "1.0",
  "homepage_url": "https://github.com/digitalmethodsinitiative/zeeschuimer",
  "icons": {
    "48": "pen.svg"
  },

  "browser_action": {
    "default_icon": "icons/zeeschuimer-32.png",
    "default_title": "Zeeschuimer Status",
    "default_popup": "popup/status.html",
    "browser_style": true
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>", "storage", "downloads"
  ],

  "background": {
    "scripts": [
      "inc/dexie.js",
      "js/background.js"
    ]
  }
}
